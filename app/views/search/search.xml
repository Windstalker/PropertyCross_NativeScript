<Page navigatedTo="pageNavigatedTo">
    <StackLayout>
        <StackLayout>
            <Label text="Use the form below to search for houses to buy. You can search by place-name, postcode, or click 'My location', to search in your current location!"
                   cssClass="title"
                   textWrap="true" />
            <SearchBar id="search" hint="Enter your location here" />
            <DockLayout orientation="horizontal">
                <Button text="Go" />
                <Button text="Location" />
            </DockLayout>
        </StackLayout>
        <StackLayout>
            <Label text="{{ locationsType }}" />
            <ListView items="{{ locations }}" cssClass="locations">
                <ListView.itemTemplate>
                    <Label text="{{ name }}" textWrap="true" cssClass="location-name" />
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>