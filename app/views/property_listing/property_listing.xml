<Page navigatedTo="pageNavigatedTo" loaded="pageLoaded">
    <GridLayout columns="auto,*,auto">
        <Label class="heading1" col="1" text="Property Details" />
        <Button id="fave" text="Fave" col="2" />
    </GridLayout>
    <StackLayout>
        <Label text="{{ name }}" cssClass="title" />
        <Label text="{{ price }}" cssClass="price" />
        <Image src="{{ fullImageURL }}" stretch="aspectFill"/>
        <Label cssClass="features" text="{{ features }}" />
        <Label cssClass="description" textWrap="true" text="{{ description }}" />
    </StackLayout>
</Page>